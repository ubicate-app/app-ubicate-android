<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <!-- Contenido del texto (mÃ¡s grande y prominente) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/busIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AYO-272"
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/etaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llega en 15 min"
                android:textColor="#1976D2"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Punto verde de estado -->
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/green_circle"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En ruta"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/distanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 1000 m"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- *** TU ICONO mantenido pero con nuevo estilo *** -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp">

            <!-- Fondo circular blanco con borde -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_circle_border" />

            <ImageView
                android:id="@+id/busImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bus_icon"
                android:scaleType="centerInside" />

        </FrameLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>